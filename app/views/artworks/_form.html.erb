<%= semantic_form_for @artwork do |f| %>
	<% f.inputs do %>
		<%= f.input :artist %>
		<%= f.input :title %>
		<%= f.input :year %>
		<%= f.input :description %>
		<%= f.input :medium %>
		<%= f.input :dimensions, :hint => "8x10 in. for instance" %>
		<%=	f.input :exhibitions, :as => :check_boxes %>
	<% end %>
	<%= f.buttons %>
<% end %>
